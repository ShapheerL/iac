{
    "files.associations": {
        "iac/**/*.yml": "ansible",
        "iac/**/*.yaml": "ansible",
        "*.sops.yaml": "yaml",
        "*.tf": "terraform",
        "*.tfvars": "terraform",
        "*.j2": "ansible-jinja",
        "*.hcl": "terraform",
        "*.pkrvars.hcl": "terraform-vars",
        "*.pkrtpl.hcl": ""
    },
    "[ansible]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "ms-vscode.ansible"
    },
    "[terraform]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "hashicorp.terraform"
    },
}
